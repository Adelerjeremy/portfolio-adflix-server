{
    "version": 2,
    "name": "nodejs-express",
    "alias": ["adelerjeremy.com"],
    "builds": [
        {   "src": "index.js", 
            "use": "@now/node-server",
            "config": { 
                "maxLambdaSize": "50mb"
            }
        },
        {"src": "/public/**", "use": "@now/static"}
    ],
    "routes": [
        {"src": "/public/(.*)", "dest": "/public/$1"},
        { "src": "/(.*)", "dest": "/index.js" }
    ]
}
